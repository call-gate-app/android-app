<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Night mode -->
    <style name="Base.Theme.CallGate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors remain consistent -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/techPurple</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

        <!-- Use a dark background for night mode -->
        <item name="android:windowBackground">#121212</item>

        <!-- Font family -->
        <!--        <item name="android:fontFamily">@font/roboto</item>-->
    </style>

</resources>
